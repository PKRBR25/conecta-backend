# Database
DATABASE_URL="postgresql://user:password@localhost:5432/saas-login?schema=public"
SHADOW_DATABASE_URL="postgresql://user:password@localhost:5432/saas-login-shadow?schema=public"

# NextAuth
NEXTAUTH_SECRET=your-secret-key-here
NEXTAUTH_URL=http://localhost:3000

# Email Provider (example using Resend)
EMAIL_SERVER=smtp://username:password@smtp.example.com:587
EMAIL_FROM=noreply@example.com

# Rate Limiting
RATE_LIMIT_MAX=3
RATE_LIMIT_WINDOW_MS=60000

# Environment
NODE_ENV=development
